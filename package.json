    "test:no-skips": "if git grep -nE '\\b(describe|it|test)\\.(skip|only)\\(' -- src; then echo '' && echo '‚ùå Found .skip or .only in src/ - tests must not be skipped!' && exit 1; else echo '‚úÖ No .skip or .only found in src/' && exit 0; fi",
    "test:no-skips:all": "if git grep -nE '\\b(describe|it|test)\\.(skip|only)\\(' -- src tests __tests__ 2>/dev/null; then echo '' && echo '‚ùå Found .skip or .only in test directories - tests must not be skipped!' && exit 1; else echo '‚úÖ No .skip or .only found in test directories' && exit 0; fi",
    "test:coverage:check": "jest --coverage && node scripts/check-coverage-thresholds.mjs",
    "prepare": "husky install || true",
    "db:setup:local": "bash scripts/bootstrap-postgres-local.sh",
    "db:local": "bash scripts/bootstrap-postgres-local.sh",
    "db:bootstrap": "pnpm run prisma:generate && pnpm prisma migrate deploy",
    "db:use:local": "echo 'DATABASE_URL_LOCAL doit √™tre d√©fini dans .env.local' && echo 'Utilisez le switch DB dans l\\'admin panel ou modifiez .env.local manuellement'",
    "db:use:test": "echo 'Pour les tests, utilisez une base PostgreSQL de test' && echo 'Configurez DATABASE_URL dans votre environnement de test'",
    "db:use:prod": "echo '‚ö†Ô∏è  PROTECTION: Pour pointer vers prod, d√©finissez ALLOW_PROD_DB=1 dans .env.local' && echo 'Utilisez le switch DB dans l\\'admin panel'",
