{
  "name": "dj-larian",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "npx tsx scripts/update-hero-title.ts && NODE_OPTIONS='--import tsx' next dev",
    "dev:auto": "bash scripts/start-dev.sh",
    "kill-ports": "bash scripts/kill-ports.sh",
    "build": "bash scripts/ensure-postgresql-schema.sh && node scripts/fix-prisma-types.mjs && npx tsx scripts/update-hero-title.ts && (if [ \"$VERCEL\" = \"1\" ] && [ \"$NODE_ENV\" = \"production\" ]; then echo '⚠️  Skip tests en production sur Vercel'; else npm run test:ci; fi) && (NODE_OPTIONS='--import tsx' next build 2>&1 | grep -v '\\[baseline-browser-mapping\\]'; exit ${PIPESTATUS[0]})",
    "postinstall": "prisma generate && node scripts/fix-prisma-types.mjs || true",
    "start": "NODE_OPTIONS='--import tsx' next start",
    "lint": "eslint --config eslint.config.mjs \"src/**/*.{ts,tsx}\" --quiet",
    "lint:fix": "eslint --config eslint.config.mjs \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2 && node scripts/check-coverage-thresholds.mjs",
    "test:assistant-router": "jest src/lib/assistant/router/__tests__/router.test.ts src/lib/assistant/router/__tests__/router.mutations-after-list.test.ts src/lib/assistant/router/__tests__/router.sequences.test.ts src/lib/assistant/router/__tests__/router.guardrail.test.ts src/components/assistant/handlers/__tests__/handleConfirmUpdate.test.ts src/app/api/projects/batch-update/__tests__/route.test.ts --maxWorkers=2",
    "test:assistant-nlp": "jest src/lib/assistant/query-parser/__tests__/detect-filters-canonical.test.ts src/lib/assistant/query-parser/__tests__/detect-filters-fuzzy.test.ts --maxWorkers=2",
    "test:assistant-identity": "jest src/lib/assistant/prompts/__tests__/system-prompt-8b.test.ts src/lib/assistant/conversational/__tests__/groq-responder-identity.test.ts src/app/api/assistant/groq/__tests__/route.test.ts --maxWorkers=2",
    "test:no-skips": "if git grep -nE '\\b(describe|it|test)\\.(skip|only)\\(' -- src; then echo '' && echo '❌ Found .skip or .only in src/ - tests must not be skipped!' && exit 1; else echo '✅ No .skip or .only found in src/' && exit 0; fi",
    "test:no-skips:all": "if git grep -nE '\\b(describe|it|test)\\.(skip|only)\\(' -- src tests __tests__ 2>/dev/null; then echo '' && echo '❌ Found .skip or .only in test directories - tests must not be skipped!' && exit 1; else echo '✅ No .skip or .only found in test directories' && exit 0; fi",
    "test:coverage:check": "jest --coverage && node scripts/check-coverage-thresholds.mjs",
    "prepare": "husky install || true",
    "db:setup:local": "bash scripts/bootstrap-postgres-local.sh",
    "db:local": "bash scripts/bootstrap-postgres-local.sh",
    "db:bootstrap": "npm run prisma:generate && npx prisma migrate deploy",
    "db:use:local": "echo 'DATABASE_URL_LOCAL doit être défini dans .env.local' && echo 'Utilisez le switch DB dans l\\'admin panel ou modifiez .env.local manuellement'",
    "db:use:test": "echo 'Pour les tests, utilisez une base PostgreSQL de test' && echo 'Configurez DATABASE_URL dans votre environnement de test'",
    "db:use:prod": "echo '⚠️  PROTECTION: Pour pointer vers prod, définissez ALLOW_PROD_DB=1 dans .env.local' && echo 'Utilisez le switch DB dans l\\'admin panel'",
    "db:reset:local": "bash scripts/reset-db-local-safe.sh",
    "db:import:backup": "node scripts/import-backup-to-sqlite.mjs",
    "db:fix:imageids": "node scripts/fix-imageids.mjs",
    "db:studio": "npx prisma studio",
    "db:migrate:production": "node scripts/migrate-db-production.mjs",
    "db:migrate:blob-images": "node scripts/migrate-blob-images-production.mjs",
    "db:migrate:all": "npm run db:migrate:production && npm run db:migrate:blob-images",
    "db:diagnose": "node scripts/diagnose-db-schema.mjs",
    "db:diagnose-prod": "node scripts/diagnose-prod-db.mjs",
    "db:cleanup-migrations": "node scripts/cleanup-old-migrations.mjs",
    "db:cleanup-migrations:execute": "node scripts/cleanup-old-migrations.mjs --execute",
    "db:seed:live-items": "node scripts/seed-live-items.mjs",
    "db:fix-notification-table": "node scripts/fix-notification-table.mjs",
    "db:analyze-migrations": "node scripts/analyze-migration-state.mjs",
    "db:create-baselines": "node scripts/create-baseline-migrations.mjs",
    "db:cleanup-duplicates": "node scripts/cleanup-duplicate-migrations.mjs",
    "db:sync-sqlite-baselines": "node scripts/sync-sqlite-baselines.mjs",
    "db:verify-alignment": "node scripts/verify-sqlite-prod-alignment.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:check:drift": "node scripts/prisma-check-drift.mjs",
    "prisma:check:client": "prisma validate && prisma generate",
    "prisma:bootstrap:local": "node scripts/prisma-bootstrap-local.mjs",
    "generate:waveform-video": "node scripts/generate-waveform-video.mjs",
    "check-env": "node scripts/check-env.mjs",
    "audit:deps": "npm audit",
    "audit:security": "node scripts/security-audit.mjs",
    "security:check": "node scripts/security-check.mjs",
    "test:security": "jest --testPathPattern=__tests__/security",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:db-safety": "node scripts/test-db-safety-guards.mjs",
    "check:boundaries": "node scripts/check-layer-boundaries.mjs",
    "check:all": "npm run type-check && npm run lint && npm run test:no-skips && npm run check:boundaries"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.80",
    "@auth/prisma-adapter": "^2.11.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-better-sqlite3": "^7.0.1",
    "@prisma/adapter-neon": "^7.0.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^10.27.0",
    "@sparticuz/chromium-min": "^131.0.0",
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/lodash": "^4.17.21",
    "@types/node": "^22",
    "@types/uuid": "^10.0.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^0.25.1",
    "@vercel/speed-insights": "^1.2.0",
    "ai": "^5.0.110",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.23.24",
    "gsap": "^3.13.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.476.0",
    "next": "^16.0.7",
    "next-auth": "^5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "puppeteer": "^24.31.0",
    "puppeteer-core": "^24.31.0",
    "react": "latest",
    "react-day-picker": "^8.10.1",
    "react-dom": "latest",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-image-crop": "^11.0.7",
    "recharts": "^2.15.2",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.3",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chai": "^5.2.3",
    "@types/cypress": "^0.1.6",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "prisma": "^7.0.1",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript-eslint": "^8.47.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bash scripts/lint-staged-eslint.sh",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
