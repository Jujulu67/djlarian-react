    "db:import:backup": "node scripts/import-backup-to-sqlite.mjs",
    "db:fix:imageids": "node scripts/fix-imageids.mjs",
    "db:studio": "pnpm prisma studio",
    "db:migrate:production": "node scripts/migrate-db-production.mjs",
    "db:migrate:blob-images": "node scripts/migrate-blob-images-production.mjs",
    "db:migrate:all": "pnpm run db:migrate:production && pnpm run db:migrate:blob-images",
    "db:diagnose": "node scripts/diagnose-db-schema.mjs",
    "db:diagnose-prod": "node scripts/diagnose-prod-db.mjs",
    "db:cleanup-migrations": "node scripts/cleanup-old-migrations.mjs",
