# Configuration Cloudflare Pages/Wrangler
# Copiez ce fichier vers wrangler.toml et remplissez les valeurs

name = "djlarian"
compatibility_date = "2024-01-01"

# Variables d'environnement (pour le développement local)
# En production, utilisez Cloudflare Dashboard → Pages → Settings → Environment Variables
[env.production]
vars = { NODE_ENV = "production" }

# Configuration R2 (optionnel, si vous utilisez R2)
# [[r2_buckets]]
# binding = "MY_BUCKET"
# bucket_name = "djlarian-uploads"

# Note: Les secrets doivent être configurés via:
# wrangler pages secret put VARIABLE_NAME
# ou via Cloudflare Dashboard

